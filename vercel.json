{
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/api/dashboard",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/clients",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/tasks", 
      "dest": "/api/index.py"
    },
    {
      "src": "/api/finance",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/ai/generate",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}