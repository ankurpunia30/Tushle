# Database
DATABASE_URL=postgresql://user:password@localhost/automation_dashboard

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-very-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Content Engine Configuration
# Add your API keys here for real trending topic discovery

# Groq API for LLM analysis (free tier available)
GROQ_API_KEY=your_groq_api_key_here

# Optional: NewsAPI for news trends (free tier: 1000 requests/day)
NEWS_API_KEY=your_news_api_key_here

# Optional: Reddit API credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Optional: Twitter API v2 credentials
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Content Engine Settings
ENABLE_REAL_TRENDING_DATA=false
ENABLE_LLM_ANALYSIS=false
DEFAULT_TRENDING_SOURCES=reddit,hackernews,google_trends

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Automation Dashboard

# External APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
YOUTUBE_API_KEY=your-youtube-api-key

# AI Settings
OLLAMA_URL=http://localhost:11434

# Celery
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379
